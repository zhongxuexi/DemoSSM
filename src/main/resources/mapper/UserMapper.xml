<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jess.dao.UserDao">
    <select id="selectUser" resultType="com.jess.pojo.User" parameterType="hashmap">
        SELECT * FROM user
        <if test="id != null and id != '' ">
            <where>
                AND id = #{id}
            </where>
        </if>
    </select>

</mapper>